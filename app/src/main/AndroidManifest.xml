<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zakarneh.sales">

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/shopping_cart"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ClientsScreen"
            android:label="Clients"
            android:windowSoftInputMode="adjustNothing"/>
        <activity
            android:name=".NotesScreen"
            android:label="Notes" />
        <activity
            android:name=".ProductsScreen"
            android:label="Products"
            android:windowSoftInputMode="adjustNothing"/>
        <activity
            android:name=".SalesHistoryScreen"
            android:label="Sales History"
            android:windowSoftInputMode="adjustNothing"></activity>
        <activity android:name=".SellProductsScreen"
            android:windowSoftInputMode="adjustNothing"></activity>
    </application>

</manifest>
